{
    "name": "modern-js-workflow-practice",
    "version": "1.0.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "deploy": "gh-pages -d dist",
        "css:scss": "node-sass --output-style compressed -o dist/css src/scss",
        "css:autoprefixer": "postcss -u autoprefixer -r dist/*/*.css",
        "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
        "watch:css": "onchange \"src/scss\" -- npm run build:css",
        "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
        "build:images": "imagemin src/images/**/* --out-dir=dist/images",
        "watch:images": "onchange \"src/images\" -- npm run build:images",
        "build:js": "webpack --mode=production",
        "watch:js": "onchange \"src/js\" -- webpack --mode=development",
        "build:html": "posthtml -c posthtml.json",
        "watch:html": "onchange \"src/views\" -- npm run build:html",
        "serve": "browser-sync start --server \"dist\" --files \"dist\"",
        "watch": "run-p serve watch:*",
        "build": "run-p build:*"
    },
    "author": "",
    "license": "ISC",
    "homepage": "https://jesse-zonneveld.github.io/todo",
    "devDependencies": {
        "autoprefixer": "^9.0.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.1.0",
        "babel-preset-env": "^1.7.0",
        "browser-sync": "^2.26.12",
        "eslint": "^7.11.0",
        "eslint-loader": "^4.0.2",
        "htmlnano": "^0.2.6",
        "imagemin-cli": "^6.0.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.0.2",
        "postcss-cli": "^8.1.0",
        "posthtml": "^0.13.3",
        "posthtml-cli": "^0.8.0",
        "posthtml-modules": "^0.6.2",
        "stylelint": "^13.7.2",
        "webpack": "^5.1.0",
        "webpack-cli": "^4.0.0"
    },
    "dependencies": {
        "gh-pages": "^3.1.0",
        "moment": "^2.29.1"
    }
}
